<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Store</title>
</head>
<body>
    <h1>Game Store</h1>
    <ul id="gameList">
        <!-- Game items will be added here dynamically -->
    </ul>

    <script>
        // Mock data for testing
        const mockGames = JSON.parse('<%- JSON.stringify(games) %>');



        // Function to render games dynamically
        function renderGames() {
            const gameList = document.getElementById('gameList');
            gameList.innerHTML = '';

            mockGames.forEach(game => {
                const listItem = document.createElement('li');
                listItem.textContent = game.title;
                gameList.appendChild(listItem);
            });
        }

        // Call the renderGames function on page load
        window.onload = renderGames();
    </script>
</body>
</html>
